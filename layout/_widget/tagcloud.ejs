  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('tagcloud') %></h3>
    <div class="widget tagcloud">
      <!-- <%- tagcloud() %> -->
      <%- list_tags(site.tags, {class: 'classtest', style: 'list', orderby: 'length', order: -1, amount: 5}) %>
    </div>
  </div>
<% } %>